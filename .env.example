# ============================================
# Django Core Settings
# ============================================
SECRET_KEY=your-secret-key-here-change-in-production-min-50-chars
DJANGO_ENVIRONMENT=development
DEBUG=True

# ============================================
# Database Configuration
# ============================================
DB_NAME=pharma_platform_dev
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# ============================================
# AWS S3 Configuration
# ============================================
# Set to True to enable S3 storage in production
USE_S3=False

# AWS Credentials (IAM user with S3 permissions)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# S3 Bucket Configuration
AWS_STORAGE_BUCKET_NAME=pharma-platform-prescriptions
AWS_S3_REGION_NAME=ap-south-1

# Optional: Custom domain (e.g., CloudFront)
AWS_S3_CUSTOM_DOMAIN=

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
# Development: http://localhost:3000,http://localhost:8000
# Production: https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================
# File Upload Settings
# ============================================
# Maximum file size in MB (default: 10)
MAX_PRESCRIPTION_FILE_SIZE_MB=10

# Pre-signed URL expiration in seconds (default: 3600 = 1 hour)
PRESCRIPTION_URL_EXPIRATION_SECONDS=3600

# ============================================
# Email Configuration
# ============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@pharmaplatform.com
SERVER_EMAIL=server@pharmaplatform.com

# ============================================
# Production Settings
# ============================================
# Comma-separated list of allowed hosts
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# ============================================
# Stripe Configuration (for future use)
# ============================================
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key

